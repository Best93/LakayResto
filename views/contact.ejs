<% include partials/header %>

<!-- Section Contact-->
<section id="contact" class="p-2 height">
  <div class="text-center p-2 container">
    <div class="text-primary">
      <p class="letter-spacing">Contact Us</p>
    </div>
    <div>
      <h2 class="m-heading text-color ">
        We Enjoy Helping our Customer
      </h2>
    </div>
    <div class="form-group text-center">
      <i class=" text-primary fas fa-inbox fa-5x"></i>
    </div>
  </div>
  <div class="flexContainer  container">
    <div class="restoInfo ">
      <h2 class="s-heading  py-1 bg-primary">Restaurant Information</h2>
      <div class="flexContainer">
        <div>
          <i
            class="fas fa-home fa-2x border text-primary iconContainer py-top"
          ></i>
        </div>
        <div class="px-1">
          <h3 class="text-color">Address</h3>
          <p class="text-color">Lorem ipsum dolor sit amet.</p>
          <p class="text-color">Lorem ipsum dolor sit amet.</p>
        </div>
      </div>

      <div class="flexContainer">
        <div>
          <i
            class="fas fa-phone-volume fa-2x text-primary border iconContainer py-top"
          ></i>
        </div>
        <div class="px-1">
          <h3 class="text-color">Phone</h3>
          <p class="text-color">Lorem ipsum dolor sit amet.</p>
          <p class="text-color">Lorem ipsum dolor sit amet.</p>
        </div>
      </div>
      <div class="flexContainer">
        <div>
          <i
            class="far fa-envelope fa-2x border text-primary iconContainer py-top"
          ></i>
        </div>
        <div class="px-1">
          <h3 class="text-color">Email</h3>
          <p class="text-color">Lorem ipsum dolor sit amet.</p>
          <p class="text-color">Lorem ipsum dolor sit amet.</p>
        </div>
      </div>
      <div class="flexIcons">
        <div class="social-media">
          <a href="http://www.google.com">
            <i
              class="fab fa-facebook-f fa-2x iconContainer text-primary border mx-1 py-top"
            ></i>
          </a>
        </div>
        <div>
          <a href="http://www.google.com">
            <i
              class="fab fa-instagram fa-2x iconContainer text-primary border mx-1 py-top"
            ></i>
          </a>
        </div>
        <div>
          <a href="http://www.google.com">
            <i
              class="fab fa-twitter fa-2x iconContainer text-primary border mx-1 py-top"
            ></i>
          </a>
        </div>
      </div>
    </div>
    <div class="contact-form ">
      <h2 class="s-heading  py-1 bg-primary">Leave Us a Message</h2>

      <form action="contact" role="form" method="post">
        <div class="form-group">
          <label for="name" class="text-primary">Name</label>
          <input type="text" name="name" id="name" placeholder="Enter Name" />
        </div>

        <div class="form-group">
          <label for="message" class="text-primary">Message</label>
          <textarea
            name="message"
            id="message"
            placeholder="Enter Message"
          ></textarea>
        </div>

        <input type="submit" value="Message Us" class="btn btn-dark" />
      </form>
    </div>
  </div>
</section>
<% include partials/footer %>
