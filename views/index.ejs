<!-- Section Booking-->
<section id="booking" class=" text-center bg-booking">
  <div id="bookingContent">
    <div class="text-center p-2 container">
      <div class="text-primary">
        <p class="letter-spacing">Hours Of Operation</p>
      </div>
      <div>
        <h2 class="m-heading">
          Here to Provide the Best Services
        </h2>
      </div>
    </div>
    <div class="flexContainer container">
      <div class="box text-color">
        <h1>Mon-Fri</h1>
        <p>8:00 A.M - Midnight</p>
      </div>
      <div class="box text-color">
        <h1>Sat</h1>
        <p>11:00 A.m - 9:30 P.M</p>
      </div>
      <div class="box text-color">
        <h1>Sun</h1>
        Closed
      </div>
    </div>
    <div>
      <div class="text-center p-2 container">
        <h2 class="m-heading text-primary">
          Reserve Your Table
        </h2>
      </div>
      <div class="booking-form">
        <form
          id="form"
          action="/addbooking"
          onsubmit="return validate(this)"
          method="post"
        >
          <div class="form-group">
            <label for="name" class="text-primary"
              ><i class="fas fa-user fa-2x"></i
            ></label>
            <input
              type="text"
              name="name"
              placeholder="Enter Your Name"
              required
            />
          </div>
          <div class="form-group">
            <label for="guest" class="text-primary"
              ><i class="fas fa-users fa-2x"></i
            ></label>
            <input
              type="number"
              name="guest"
              placeholder="Number of Guest"
              required
            />
          </div>

          <div class="form-group">
            <label for="time" class="text-primary"
              ><i class="far fa-clock fa-2x"></i> hr-mn-sc</label
            >
            <input
              id="time"
              type="time"
              name="time"
              placeholder="Time"
              required
            />
          </div>

          <div class="form-group">
            <label for="date" class="text-primary"
              ><i class="far fa-calendar-times fa-2x"></i
            ></label>
            <input
              id="date"
              type="date"
              name="date"
              value=""
              placeholder="Date"
              required
            />
          </div>
          <div class="form-group">
            <label for="phone" class="text-primary"
              ><i class="fas fa-mobile fa-2x"></i
            ></label>
            <input
              type="text"
              name="phone"
              placeholder="Enter Your Phone #"
              required
            />
          </div>
          <input type="submit" value="Book Table" class="btn btn-dark " />
        </form>
      </div>
    </div>
  </div>
</section>

